{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/modules/**/*.controller.ts"],

  "spec": {
    "outputDirectory": "src/swagger",
    "specVersion": 3,
    "basePath": "/api",
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "src/routes",
    "basePath": "/api" ,
    "authenticationModule": "src/middleware/expressAuthentication.ts"
  }
}