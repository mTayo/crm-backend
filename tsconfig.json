{
  "compilerOptions": {
    "target": "es2021",                  
    "lib": ["es2021", "dom"],         
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,              
    "allowSyntheticDefaultImports": true  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./types", "./node_modules/@types"]
}